pool {
  <% if @peer -%>
  failover peer "<%= node['domain'] %>";
  <% end -%>
  <% @range = [@range] if @range.is_a?(String) -%>
  <% @range.each do |range| -%>
  range <%= range %>;
  <% end -%>
  <% @deny.each do |denied| -%>
  deny <%= denied %>;
  <% end -%>
  <% @allow.each do |allowed| -%>
  allow <%= allowed %>;
  <% end -%>
}
